@model CustomModelBindingDemo.Models.User

@{
    ViewBag.Title = "ComplexObjectForm";
}

<h2>ComplexObjectForm</h2>
@using (Html.BeginForm("ComplexObjectForm","Home"))
{
    <p>
       @Html.LabelFor(m => m.FirstName) 
       @Html.EditorFor(m => m.FirstName)
    </p>
    <p>
       @Html.LabelFor(m => m.LastName) 
       @Html.EditorFor(m => m.LastName)
    </p>
    <p>
       @Html.LabelFor(m => m.DateOfBirth)<br />
       Day:@Html.TextBoxFor(m => m.DateOfBirth.Value.Day, new { style = "width:50px" })  
       Month:@Html.TextBoxFor(m => m.DateOfBirth.Value.Month, new { style = "width:50px" })  
       Year:@Html.TextBoxFor(m => m.DateOfBirth.Value.Year, new { style = "width:50px" })
    </p>
    <p>
       <input name="roles" type="checkbox" value="Manager" /> Manager<br />
       <input name="roles" type="checkbox" value="Editor" /> Editor<br />
       <input name="roles" type="checkbox" value="Contributor" /> Contributor<br />
    </p>
    <p><input type="submit" /></p>
}

<script type="text/javascript">
    $().ready(function () {
        $('#dateofbirth').datepicker({
            dateFormat: 'MM d, yy',
            changeMonth: true,
            changeYear: true
        });
    });
</script>
